---
import Tabs from '../../components/organisms/Tabs.astro';
import Tabs2 from '../../components/organisms/Tabs2.astro';
import Layout from '../../layouts/Layout.astro';
try {
  let [learningRole, industries, learningRoles] = await Promise.all([
    fetch("http://127.0.0.1:1337/api/learning-roles?populate=*")
  ]);
} catch (err) {
  console.log(err);
}

export async function getStaticPaths() {
  const response = await fetch('http://127.0.0.1:1337/api/industries?populate=*');
    const { data } = await response.json();

    return data.map((industries) => {
      return {
        params: { slug: industries.attributes.slug },
        props: { industries },
      };
    });
}

const { industries, learningRoles } = Astro.props;

---

<Layout title="index">

    
  <div class="flex flex-col gap-0 mb-8">
    <div class="p-12 mx-auto w-full border-b mb-8 border-base6">
      <Tabs2 /> 
      <Tabs /></div></div>


      <ul class="grid grid-cols-4 mx-auto max-w-5xl mb-8" id="infor_A">

              <h2>{industries.attributes.title}</h2>
</ul>
</Layout>