---

const response = await fetch("http://127.0.0.1:1337/api/industries?populate=*");
const { data } = await response.json();
const { path } = Astro.props;
---

<section class="py-0">
    <div class="container mx-auto p-4">
      <!-- <div class="max-w-xl mx-auto text-center">
        <span class="text-lg text-blue-500 font-medium">Lorem ipsum</span>
        <h2 class="mt-6 mb-20 text-2xl text-white uppercase font-heading">Take quick action that increases your brand&apos;s regular profit.</h2>
      </div>   -->
      <div class="flex flex-wrap">
        {
          data.map((path) => (
            <>
        <div class="lg:w-2/4 lg:mb-0 h-48 flex align-items-center ">
          <a class="flex group relative m-0 w-full p-0 cursor-pointer p-2 overflow-hidden rounded-3xl" href={`path/${path.attributes.Slug}`}>
            <img class="relative w-full h-full object-cover rounded-xl flex flex-col justify-center origin-right align-items-center overflow-hidden" src={`${path.attributes.CardImage.data.attributes.url}`} alt="">
              <div class="absolute min-w-full h-full rounded-xl my-auto text-brand1 flex items-center z-10 justify-items-end overflow-hidden">
                  <h3 class="text-xl h-auto w-auto font-regular text-right transition-all rounded-2xl pl-8 pb-0 bottom-0">{path.attributes.Title}</h3>
              </div>
          </a>
        </div>
    </>
  ))
}
      </div>
    </div>
  </section>