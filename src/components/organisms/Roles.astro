---
const response = await fetch('http://127.0.0.1:1337/api/learning-roles?populate=*');
    const { data } = await response.json();
const { url, role, letter } = Astro.props
console.log(data)
---

<div class="flex flex-col gap-0 max-w-5xl mx-auto w-full justify-left px-4 py-3">
    <h1 class="text-3xl font-regular text-base12">{letter}</h1>
    </div>
<ul class="grid grid-cols-4 mx-auto max-w-5xl mb-8" id={letter}>
    {
        data.map((role) => (
      <li><a href={`${role.attributes.slug}`} class="text-xs block font-bold text-base11 hover:text-base12 px-4 py-3">{`${role.attributes.title}`}</a></li>
      ))
      }
      <!-- <li><a href={url} class="text-xs block font-bold text-base11 hover:text-base12 px-4 py-3">{role}</a></li> -->
</ul>