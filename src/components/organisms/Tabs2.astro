---
const active = true;
const finished = false;
const goal = 3;
---

<div class="px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-5xl">
      
  <div>
    <div class="sm:hidden">
      <label for="tabs" class="sr-only">Select a tab</label>
      <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
      <select id="tabs" name="tabs" class="block w-full rounded-md border border-base9 focus:border-brand9 focus:ring-brand9">
        

          {active === true ? <option selected="">Industry</option> : <option >Industry</option>}
          {active === true ? <option selected="">Role</option> : <option >Role</option>}
          {active === true ? <option selected="">Learning Lifecycle</option> : <option >Learning Lifecycle</option>}
          {active === true ? <option selected="">Learning Paths</option> : <option >Learning Paths</option>}
        

      </select>
    </div>
    <div class="hidden sm:block">
      <nav class="isolate flex divide-x divide-base4 rounded-lg border outline-1 shadow-xl shadow-base4" aria-label="Tabs">
        

          <a href="/" class="text-gray-900 rounded-l-lg  group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-center text-sm font-medium hover:bg-base2 focus:z-10" x-state:on="Default" x-state:off="Default" aria-current="page" x-state-description="Current: 'text-gray-900', Default: 'text-base7 hover:text-base9'">
            <span>Industry</span>
            <span aria-hidden="true" class="bg-base3 group-hover:bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span>
            <!-- <span aria-hidden="true" class="bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span> -->
          </a>
        
          <a x-data="{ open: false }"  x-on:hover="open = ! open" href="/" class="text-base9 hover:text-base12 group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-center text-sm font-medium hover:bg-base2 focus:z-10" x-state:on="Current" x-state:off="Default" aria-current="page" x-state-description="Current: 'text-gray-900', Default: 'text-base7 hover:text-base9'">
            <span>Role</span>
            <span aria-hidden="true" class="bg-base3 group-hover:bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span>
            <!-- <span aria-hidden="true" class="bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span> -->
          </a>
        
          <a href="lifecycle" class="text-base9 hover:text-base12 group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-center text-sm font-medium hover:bg-base2 focus:z-10" x-state:on="Current" x-state:off="Default" aria-current="page" x-state-description="Current: 'text-gray-900', Default: 'text-base7 hover:text-base9'">
            <span>Learning Lifecycle</span>
            <span aria-hidden="true" class="bg-base3 group-hover:bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span>
            <!-- <span aria-hidden="true" class="bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span> -->
          </a>
        
          <a href="learning-paths" class="text-base9 hover:text-base12 rounded-r-lg group relative min-w-0 flex-1 overflow-hidden bg-white py-4 px-4 text-center text-sm font-medium hover:bg-base2 focus:z-10" x-state:on="Current" x-state:off="Default" aria-current="page" x-state-description="Current: 'text-gray-900', Default: 'text-base7 hover:text-base9'">
            <span>Learning Paths</span>
            <span aria-hidden="true" class="bg-base3 group-hover:bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span>
            <!-- <span aria-hidden="true" class="bg-brand9 absolute inset-x-0 bottom-1 mx-1.5 rounded-full h-0.75"></span> -->
